{
  "description": "v-a-13: Nested Timeframe Strategy - Day signals with 4H/1H execution",
  "version": "v-a-13",
  "base_capital": 10000000,
  "fee_rate": 0.0005,
  "slippage": 0.0002,

  "timeframes": {
    "day": "bitcoin_day",
    "4h": "bitcoin_minute240",
    "1h": "bitcoin_minute60"
  },

  "day_config": {
    "comment": "Day level - Macro trend setting (reuse v-a-11 Sideways signals)",
    "stop_loss": -0.10,
    "max_position_per_signal": 0.50
  },

  "4h_config": {
    "comment": "4H level - Medium-term execution",
    "max_entries_per_day_signal": 3,
    "position_size": 0.125,

    "entry": {
      "rsi_threshold": 35,
      "macd_bullish": true,
      "bb_position_max": 0.3,
      "volume_ratio_min": 1.2
    },

    "exit": {
      "tp1": 0.03,
      "tp1_ratio": 0.5,
      "tp2": 0.06,
      "tp2_ratio": 0.5,
      "stop_loss": -0.015,
      "trailing_from_peak": -0.01,
      "max_hold_hours": 168
    }
  },

  "1h_config": {
    "comment": "1H level - Short-term execution",
    "max_entries_per_day_signal": 5,
    "position_size": 0.10,

    "entry": {
      "rsi_threshold": 30,
      "stoch_k_threshold": 20,
      "bb_position_max": 0.2,
      "volume_ratio_min": 1.5
    },

    "exit": {
      "tp1": 0.02,
      "tp1_ratio": 0.6,
      "tp2": 0.04,
      "tp2_ratio": 0.4,
      "stop_loss": -0.01,
      "trailing_from_peak": -0.007,
      "max_hold_hours": 48
    }
  },

  "risk_management": {
    "max_concurrent_positions": 8,
    "reentry_cooldown_hours": 72,
    "max_capital_per_day_signal": 0.50
  }
}
