{
  "description": "v-a-13 Trend-Based: Use Day BULL/BEAR instead of SIDEWAYS",
  "version": "v-a-13-trend",
  "base_capital": 10000000,
  "fee_rate": 0.0005,
  "slippage": 0.0002,

  "timeframes": {
    "day": "bitcoin_day",
    "4h": "bitcoin_minute240",
    "1h": "bitcoin_minute60"
  },

  "day_config": {
    "comment": "Day level - Use BULL/BEAR trends (NOT SIDEWAYS)",
    "market_states": ["BULL_STRONG", "BULL_MODERATE"],
    "stop_loss": -0.10,
    "max_position_per_signal": 0.50
  },

  "4h_config": {
    "comment": "4H level - Pullback in uptrend",
    "max_entries_per_day_signal": 2,
    "position_size": 0.15,

    "entry": {
      "rsi_threshold": 40,
      "macd_bullish": false,
      "bb_position_max": 0.4,
      "volume_ratio_min": 1.1
    },

    "exit": {
      "tp1": 0.05,
      "tp1_ratio": 0.5,
      "tp2": 0.10,
      "tp2_ratio": 0.5,
      "stop_loss": -0.025,
      "trailing_from_peak": -0.015,
      "max_hold_hours": 240
    }
  },

  "1h_config": {
    "comment": "1H level - Scalping in uptrend",
    "max_entries_per_day_signal": 3,
    "position_size": 0.12,

    "entry": {
      "rsi_threshold": 35,
      "stoch_k_threshold": 25,
      "bb_position_max": 0.3,
      "volume_ratio_min": 1.3
    },

    "exit": {
      "tp1": 0.04,
      "tp1_ratio": 0.6,
      "tp2": 0.08,
      "tp2_ratio": 0.4,
      "stop_loss": -0.02,
      "trailing_from_peak": -0.012,
      "max_hold_hours": 96
    }
  },

  "risk_management": {
    "max_concurrent_positions": 6,
    "reentry_cooldown_hours": 48,
    "max_capital_per_day_signal": 0.50
  }
}
